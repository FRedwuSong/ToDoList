<% if @todolist.errors.present? %>
	<ul>
		<% @todolist.errors.each do |error, message| %>
			<li> <%= "#{error.capitalize} #{message}" %></li
		<% end %>		>
	</ul>
<% end %>	

<div class="container">
	<%= form_for @todolist do |f| %>
		<div class="form-group">
			<%= f.label :name,"代辦事項" %>
			<%= f.text_field :name,class: "form-control" %>
		</div>
		
		<div class="form-group">
			<%= f.label :date, "死線"%>
			<%= f.date_select :date%>
		</div>
		
		<div class="form-group">
			<%= f.label :note, "詳細內容"%>
			<%= f.text_field :note, class: "form-control"%>
		</div>
		<div class="itembox_btn">
      <%# button 這個變數，分別在 new.html.erb & edit.html.erb 中設定 %>
      <%= f.submit button, class: 'btn btn-success' %>
      <%= link_to 'BACK', :back, class: 'btn btn-default' %>
		</div>
	<% end %>
</div>

	
